---
import Nav from '../components/Nav.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<div class="grid h-screen grid-cols-6 grid-rows-7 md:grid-rows-3">
		<div
			class="flex items-center justify-center col-span-6 p-6 text-white bg-purple-900 border-2 border-gray-800 md:col-span-4 md:justify-start"
		>
			<div>
				<h1 class="text-3xl font-semibold text-gray-400 lg:text-5xl">
					Daniel Herskowitz
				</h1>
				<h2 class="text-4xl font-semibold text-gray-200 lg:text-6xl">
					Software Developer
				</h2>
			</div>
		</div>
		<Nav/>


		<a
			href="https://www.linkedin.com/in/daniel-herskowitz-105/"
			target="_blank"
			class="flex items-center justify-center col-span-3 p-6 transition-all duration-150 bg-blue-800 border-2 border-gray-800 md:col-span-1 hover:bg-blue-900"
			><div>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="60"
					height="60"
					viewBox="0 0 24 24"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="text-gray-200 stroke-current"
					><path d="M0 0h24v24H0z" stroke="none"></path>
					<rect x="4" y="4" width="16" height="16" rx="2"></rect>
					<path d="M8 11v5M8 8v.01M12 16v-5M16 16v-3a2 2 0 00-4 0"
					></path></svg
				>
				<div class="text-lg text-gray-200">LinkedIn</div>
			</div></a
		>

		<div
			class="relative flex-col items-center justify-center hidden col-span-6 p-6 py-16 border-2 border-gray-800 md:col-span-4 md:py-0 md:flex"
		>
			<div
				class="absolute w-full h-full overflow-hidden"
				style="opacity: 0.85;"
			>
				<img src="/assets/code.jpg" alt="" />
			</div>
			<div class="relative text-center">
				<a
					href="/my-work"
					class="inline-block px-10 py-2 text-xl font-semibold text-white transition-all duration-150 ease-in-out bg-green-900 md:text-3xl hover:shadow-xl hover:bg-green-700"
					>My Work</a
				>
			</div>
		</div>

		<a
			href="https://github.com/dherskowitz"
			target="_blank"
			class="flex items-center justify-center col-span-3 p-6 transition-all duration-150 bg-gray-900 border-2 border-gray-800 md:col-span-1 hover:bg-gray-700"
			><div>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="60"
					height="60"
					viewBox="0 0 24 24"
					stroke="currentColor"
					fill="none"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="text-gray-200 stroke-current"
					><path d="M0 0h24v24H0z" stroke="none"></path>
					<path
						d="M9 19c-4.3 1.4-4.3-2.5-6-3m12 5v-3.5c0-1 .1-1.4-.5-2 2.8-.3 5.5-1.4 5.5-6a4.6 4.6 0 00-1.3-3.2 4.2 4.2 0 00-.1-3.2s-1.1-.3-3.5 1.3a12.3 12.3 0 00-6.2 0C6.5 2.8 5.4 3.1 5.4 3.1a4.2 4.2 0 00-.1 3.2A4.6 4.6 0 004 9.5c0 4.6 2.7 5.7 5.5 6-.6.6-.6 1.2-.5 2V21"
					></path></svg
				>
				<div class="text-lg text-gray-200">Github</div>
			</div></a
		>

		<div
			class="relative flex flex-col items-center justify-center col-span-6 p-6 py-16 border-2 border-gray-800 md:col-span-4 md:py-0 md:hidden"
		>
			<div
				class="absolute w-full h-full overflow-hidden"
				style="opacity: 0.85;"
			>
				<img src="/code.jpg" alt="" />
			</div>
			<div class="relative text-center">
				<a
					href="/my-work"
					class="inline-block px-10 py-2 text-xl font-semibold text-white transition-all duration-150 ease-in-out bg-green-900 md:text-3xl hover:shadow-xl hover:bg-green-700"
					>My Work</a
				>
			</div>
		</div>

		<div
			class="flex flex-col items-center justify-center col-span-6 py-16 text-center border-2 border-gray-800 md:col-span-3 md:py-0"
		>
			<a
				href="/about-me"
				class="inline-block px-4 py-2 text-xl font-semibold text-white transition-all duration-150 ease-in-out bg-green-900 md:text-2xl lg:text-3xl hover:shadow-xl hover:bg-green-700"
				>My History &amp; Experience</a
			>
		</div>

		<div
			class="flex flex-col items-center justify-center col-span-6 px-4 py-16 text-center bg-green-900 border-2 border-gray-800 md:col-span-3 md:py-0"
		>
			<a
				href="/assets/Daniel Herskowitz Resume.pdf"
				target="_blank"
				class="inline-block px-4 py-2 text-xl font-semibold text-white capitalize transition-all duration-150 ease-in-out bg-green-600 md:text-2xl lg:text-3xl hover:shadow-xl hover:bg-green-700"
				>Download my resume as a PDF</a
			>
		</div>
	</div>
</BaseLayout>

---
import CallToAction from '../components/CallToAction.astro';
import Header from '../components/Header.astro';
import { jobs } from '../jobs.json';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <Header />
  <section
    class="container mx-auto m-4 pb-4 px-4 text-slate-900 flex flex-col gap-4 page-fade"
  >
    <div
      class="px-6 py-8 border-2 border-[color:var(--line)] bg-[color:var(--surface-2)] reveal"
    >
      <h1 class="text-5xl font-bold pb-4 font-display">About Me</h1>
      <p class="pb-4 text-slate-800 text-lg">
        Director of Technology and hands-on Senior Software Engineer with 10+
        years of experience building internal platforms for logistics and
        operations-driven teams. I focus on reliable backend systems,
        integrations, and tooling that make day-to-day work faster and more
        dependable.
      </p>
      <div class="grid gap-4 md:grid-cols-2">
        <div
          class="rounded-lg border border-[color:var(--line)] bg-white/80 p-4"
        >
          <div class="text-sm uppercase tracking-wide text-slate-500">
            Core Focus
          </div>
          <ul class="mt-3 space-y-2 text-slate-800">
            <li>Backend systems, APIs, and data integrations</li>
            <li>Operational tooling and internal platforms</li>
            <li>Frontend UI/UX and user-centered interfaces</li>
            <li>Cloud infrastructure, automation, and reliability</li>
          </ul>
        </div>
        <div
          class="rounded-lg border border-[color:var(--line)] bg-white/80 p-4"
        >
          <div class="text-sm uppercase tracking-wide text-slate-500">
            Core Skills
          </div>
          <ul class="mt-3 space-y-2 text-slate-800">
            <li>Python (Django), PHP (Laravel), Node.js, REST APIs</li>
            <li>Vue, Ionic (Angular), JavaScript, HTML, CSS</li>
            <li>PostgreSQL, SQL Server, MySQL, indexing, audit logging</li>
            <li>AWS, Docker, Linux, Nginx, GitHub Actions</li>
          </ul>
        </div>
      </div>
    </div>
    <div
      class="px-6 py-8 border-2 border-[color:var(--line)] bg-white/80 backdrop-blur reveal reveal-delay-1"
    >
      <h1 class="text-5xl font-bold font-display">My Experience</h1>

      {
        jobs.map((job) => {
          return (
            <div class="mt-10">
              <div class="text-xl font-semibold text-slate-900">
                <span>{job.company}</span>{' '}
                <span class="hidden sm:inline">|</span>{' '}
                <span class="block mt-2 font-semibold text-[color:var(--accent-2)] sm:inline">
                  {job.title}
                </span>{' '}
                <span class="hidden sm:inline">|</span>{' '}
                <span class="block mt-2 text-base text-slate-600 sm:inline sm:mt-0 sm:text-xl">
                  {job.timeframe}
                </span>
              </div>{' '}
              <div class="mt-4 text-slate-800">{job.description}</div>
            </div>
          );
        })
      }
    </div>
  </section>
  <CallToAction />
</BaseLayout>

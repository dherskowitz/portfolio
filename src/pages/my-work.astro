---
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { large, small } from '../projects.json';
---

<BaseLayout>
    <Header />

    <section class="container m-4 text-gray-800 mx-auto px-4 flex gap-4 flex-col">
        {
            large.map((project) => {
                return (
                    <div class="col-span-3 p-6 border-2 border-gray-800 md:col-span-2 lg:col-span-3">
                        <div>
                            <div class="text-5xl font-bold">{project.title}</div>
                            <div class="text-2xl font-semibold">{project.subtitle}</div>
                            <div class="pb-2">{project.stack}</div>
                        </div>
                        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
                            {project.projects.map((project) => {
                                return (
                                    <div class="p-4 mt-2 border-2 border-gray-600">
                                        <div class="text-xl font-bold">
                                            {project.title}
                                        </div>
                                        <p class="pb-2">
                                            {project.description}
                                        </p>
                                    </div>
                                );
                            })}    
                        </div>
                    </div>
                );
            })
        }
    </section>

    <section
        class="container m-4 text-gray-800 mx-auto px-4 flex gap-4 flex-col"
    >
    <div class="col-span-3 p-6 border-2 border-gray-800 md:col-span-2 lg:col-span-3">
        <div class="text-5xl font-bold pb-4">Personal Projects</div>
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {
                small.map((project) => {
                    return (
                        <div class="flex flex-col justify-between col-span-3 p-6 border-2 border-gray-800 md:col-span-1">
                            <div class="text-xl font-bold">{project.title}</div>
                            <p class="pb-2 break-words text-gray-600">
                                Built with {project.stack}
                            </p>
                            <div class="pb-2">{project.description}</div>
                            <div>
                                {project.buttons.map((button) => {
                                    return (
                                        <a
                                            href={button.link}
                                            target="_blank"
                                            class="block px-10 py-2 mt-2 text-base font-semibold text-center text-white transition-all duration-150 ease-in-out bg-green-900 hover:shadow-xl hover:bg-green-700"
                                        >
                                            {button.title}
                                        </a>
                                    );
                                })}
                            </div>
                        </div>
                    );
                })
            }
        </div>
    </div>
    </section>
</BaseLayout>
